%nav.navbar.navbar-expand-lg.navbar-dark
  = link_to "Footmarks", root_path, class: "navbar-brand"
  %button.navbar-toggler{"aria-controls" => "navbarNavDropdown", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbarNavDropdown", "data-toggle" => "collapse", :type => "button"}
    %span.navbar-toggler-icon
  #navbarNavDropdown.collapse.navbar-collapse
    %ul.navbar-nav.mr-auto
    %ul.navbar-nav
      - if can? :index, League
        %li.nav-item= link_to I18n.t('.league.titles.index'), leagues_path, class: "nav-link"
      - if can? :index, Club
        %li.nav-item= link_to I18n.t('.club.titles.index'), clubs_path, class: "nav-link"
      - if can? :view, :leagues_completed
        %li.nav-item= link_to I18n.t('.site.visited_clubs.title'), site_visited_clubs_path, class: "nav-link"
      - if can? :create, Footmark
        %li.nav-item= link_to I18n.t('.footmark.titles.new'), new_footmark_path, class: "nav-link"
      - if current_user
        %li.nav-item= link_to I18n.t('devise.sessions.sign_out'), destroy_user_session_path, method: :delete, class: "nav-link"
