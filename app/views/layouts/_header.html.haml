%header
  %nav.navbar.navbar-default
    .navbar-brand= link_to root_path, I18n.t('general.site.title')

    %a.toggle-nav.btn.pull-left{:href => "#"}
      %i.icon-reorder
    / dropdowns
    %ul.nav
      / user menu
      %li.dropdown.dark.user-menu
        - if user_signed_in?
          %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
            %span.user-name= current_user.email
            %b.caret
          %ul.dropdown-menu
            %li
              %a{:href => "user_profile.html"}
                %i.icon-user
                Profile
            %li
              %a{:href => "user_profile.html"}
                %i.icon-cog
                Settings
            %li.divider
            %li
              = link_to destroy_user_session_path, method: :delete do
                %i.icon-signout
                = I18n.t('devise.sessions.sign_out')
