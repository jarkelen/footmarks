- if can? :edit, Footmark
  .row
    .col-sm-12
      .page-header
        / page title
        %h1.pull-left
          %i.icon-trophy
          %span= I18n.t("footmark.titles.edit")
        / breadcrumbs
        .pull-right
          %ul.breadcrumb
            %li
              = link_to root_path do
                %i.icon-dashboard
            %li.separator
              %i.icon-angle-right
            %li= link_to I18n.t('footmark.titles.index'), footmarks_path
            %li.separator
              %i.icon-angle-right
            %li.active= I18n.t("footmark.titles.edit")

  .row
    .col-sm-12
      = render "form", title: I18n.t("footmark.titles.edit")
