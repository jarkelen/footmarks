.box
  .box-header.sea-blue-background
    .title
      .icon-edit
      = title
    .actions
      %a.btn.box-remove.btn-xs.btn-link{:href => "#"}
        %i.icon-remove
      %a.btn.box-collapse.btn-xs.btn-link{:href => "#"}
        %i
  .box-content
    = form_for @club, html: { class: "form form-horizontal"} do |f|
      = render "layouts/form_messages", target: @club
      .form-group
        .col-md-3.control-label= f.label I18n.t('.activerecord.attributes.club.league_id')
        .col-md-5= f.select :league_id, options_for_select(@leagues.map{ |l| [l.name, l.id] }, @club.league_id), { include_blank: true, prompt: "- #{I18n.t('.activerecord.attributes.club.league_id').downcase} -" }, { class: 'form-control' }
      .form-group
        .col-md-3.control-label= f.label I18n.t('.activerecord.attributes.club.name')
        .col-md-5= f.text_field :name, class: "form-control"
      .form-actions
        .row
          .col-sm-7.col-sm-offset-5
            = f.submit(class: 'btn btn-default', value: I18n.t('.general.form.save'))
            = link_to I18n.t('.general.form.cancel'), clubs_path, class: 'btn'
