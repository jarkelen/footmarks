.row
  %h1.text-center.title= t('.sign_in')
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = render 'layouts/messages'
    .form-group
      .controls.with-icon-over-input
        = f.email_field :email, autofocus: true, placeholder: "Email", "data-rule-required" => "true", class: "form-control"
        %i.icon-user.text-muted
    .form-group
      .controls.with-icon-over-input
        = f.password_field :password, autocomplete: "off", placeholder: "Password", "data-rule-required" => "true", class: "form-control"
        %i.icon-lock.text-muted
    = f.submit class: 'btn btn-block', value: I18n.t('.devise.sessions.sign_in')
  .text-center
    %hr.hr-normal
    = render "devise/shared/links"
