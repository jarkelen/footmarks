- if can? :view, :leagues_completed
  .row
    .col-sm-12
      .page-header
        / page title
        %h1.pull-left
          %i.icon-sort-by-order
          %span= I18n.t("site.visited_clubs.title")
        / breadcrumbs
        .pull-right
          %ul.breadcrumb
            %li
              = link_to root_path do
                %i.icon-dashboard
            %li.separator
              %i.icon-sort-by-order
            %li.active= I18n.t("site.visited_clubs.title")

  .row
    .col-sm-12
      .box.bordered-box.sea-blue-border{:style => "margin-bottom:0;"}
        .box-header.sea-blue-background
          .title
          .actions
            %a.btn.box-remove.btn-xs.btn-link{:href => "#"}
              %i.icon-remove
            %a.btn.box-collapse.btn-xs.btn-link{:href => "#"}
              %i
        .box-content.box-no-padding
          .responsive-table
            %table.table
              %tbody
                - @iterated_clubs.each do |club_name, home, away, total|
                  %tr
                    %td= club_name
                    %td= home
                    %td= away
                    %td= total

