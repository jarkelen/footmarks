- if can? :view, :stats
  .row
    .col-sm-12
      .page-header
        / page title
        %h1.pull-left
          %i.icon-bar-chart
          %span= I18n.t("site.stats.title")
        / breadcrumbs
        .pull-right
          %ul.breadcrumb
            %li
              = link_to root_path do
                %i.icon-dashboard
            %li.separator
              %i.icon-bar-chart
            %li.active= I18n.t("site.stats.title")

  .row
    .col-sm-12
      .box.bordered-box.sea-blue-border{:style => "margin-bottom:0;"}
        .box-header.sea-blue-background
          .title
          .actions
            %a.btn.box-remove.btn-xs.btn-link{:href => "#"}
              %i.icon-remove
            %a.btn.box-collapse.btn-xs.btn-link{:href => "#"}
              %i
        .box-content.box-no-padding
          = high_chart("leagues_chart", @leagues_chart)