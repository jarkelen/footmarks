- if can? :view, :map
  .row
    .col-sm-12
      .page-header
        / page title
        %h1.pull-left
          %i.icon-map-marker
          %span= I18n.t("site.map.title")
        / breadcrumbs
        .pull-right
          %ul.breadcrumb
            %li
              = link_to root_path do
                %i.icon-dashboard
            %li.separator
              %i.icon-angle-right
            %li.active= I18n.t("site.map.title")

  .row
    .col-sm-12
      = render "filter", search_path: site_map_path

  .row
    .col-sm-12
      .box#map-container
        #map-canvas
