- if can? :view, :programmes
  .row
    .col-sm-12
      .page-header= I18n.t("site.programmes.title")

  .row.programmes
    - @footmarks.each do |footmark|
      - if footmark.has_programme?
        - programme = ImageBuilder.new(footmark).get_programme
        .col-sm-12.col-md-2.programme
          = link_to programme, { "data-toggle" => "lightbox" } do
            = image_tag(programme)
