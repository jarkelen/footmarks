.box
  .box-header.sea-blue-background
    .title
      .icon-edit
      = title
    .actions
      %a.btn.box-remove.btn-xs.btn-link{:href => "#"}
        %i.icon-remove
      %a.btn.box-collapse.btn-xs.btn-link{:href => "#"}
        %i
  .box-content
    = form_for @league, html: { class: "form form-horizontal"} do |f|
      = render "layouts/form_messages", target: @league
      .form-group
        .col-md-3.control-label= f.label I18n.t('.activerecord.attributes.league.country')
        .col-md-5= f.select :country, options_for_select(@countries.map{ |c| [c.country, c.country] }, @league.country), { include_blank: true, prompt: "- #{I18n.t('.activerecord.attributes.league.country').downcase} -" }, { class: 'form-control' }
      .form-group
        .col-md-3.control-label= f.label I18n.t('.activerecord.attributes.league.name')
        .col-md-5= f.text_field :name, class: "form-control"
      .form-group
        .col-md-3.control-label= f.label I18n.t('.activerecord.attributes.league.step')
        .col-md-5= f.text_field :step, class: "form-control"
      .form-actions
        .row
          .col-sm-7.col-sm-offset-5
            = f.submit(class: 'btn btn-default', value: I18n.t('.general.form.save'))
            = link_to I18n.t('.general.form.cancel'), leagues_path, class: 'btn'
